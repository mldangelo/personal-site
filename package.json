{
  "name": "personal-site",
  "version": "4.0.0",
  "homepage": "https://mldangelo.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mldangelo/personal-site.git"
  },
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "TURBOPACK=1 next dev --turbopack",
    "dev:webpack": "next dev",
    "build": "next build",
    "build:turbo": "TURBOPACK=1 next build --turbopack",
    "start": "next start",
    "lint": "biome check .",
    "type-check": "tsc --noEmit",
    "format": "biome format --write . && prettier --write \"**/*.{md,css,scss}\"",
    "format:check": "biome format . && prettier --check \"**/*.{md,css,scss}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm run build",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run analyze",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run analyze"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@next/third-parties": "^16.0.0",
    "dayjs": "^1.11.13",
    "markdown-to-jsx": "^7.7.13",
    "next": "^16.0.3",
    "react": "^19.1.0",
    "react-burger-menu": "^3.1.0",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@next/bundle-analyzer": "^16.0.0",
    "@swc/core": "^1.13.1",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-burger-menu": "^2.8.7",
    "@types/react-dom": "^19.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss-normalize": "^13.0.1",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
