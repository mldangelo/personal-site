  },
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "TURBOPACK=1 next dev --turbopack -p 3456",
    "dev:webpack": "next dev -p 3456",
    "build": "next build",
    "build:turbo": "TURBOPACK=1 next build --turbopack",
    "start": "serve out -l 3456",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm run build",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run analyze",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run analyze"
  },
